package Test_01;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import java.time.Duration;

public class Assignment4 {
    public static void main(String[] args) {
        WebDriver driver = new ChromeDriver();
        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));

        try {
            driver.get("https://www.flipkart.com/");
            driver.manage().window().maximize();
            
            wait.until(ExpectedConditions.elementToBeClickable(
                    By.xpath("//a[@href='/viewcart?marketplace=FLIPKART']")))
                .click();

            driver.findElement(By.linkText("Login")).click();

            Thread.sleep(3000);
            
            wait.until(ExpectedConditions.elementToBeClickable(
                    By.xpath("//button[text()='✕']")))
                .click();
            
            driver.findElement(By.xpath("//input[contains(@title,'brands and')]")).sendKeys("Mobiles");
            driver.findElement(By.xpath("//button[contains(@type,'submit')]")).click();
            
            driver.findElement(By.xpath("//div[@class='ukzDZP rZzKt4']")).click();
            
            driver.findElement(By.xpath("//div[@class='tJjCVx _3DvUAf']")).click();

            driver.findElement(By.xpath("//div[@class='XqNaEv']/following-sibling::div[text()='4★ & above']")).click();
          //div[@class='XqNaEv']/following-sibling::div[text()='4★ & above']

//            class="tJjCVx _3DvUAf"
            
          //button[@type="submit"]


        } catch (Exception e) {
            System.out.println("An error occurred: " + e.getMessage());
        } finally {
            driver.quit();
        }
    }
}
